<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEF6FD"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/main_background" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:fontFamily="@font/anton"
        android:text="疫情防控客户端"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#99000000"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="46dp"
        android:layout_marginRight="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/Gps_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textDate"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="#66F1B394"
            android:text="获取当前GPS信息"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:id="@+id/verify_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postionView"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="#66F1B394"
            android:text="确认对比轨迹"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/compare_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="上次对比时间："
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/textDate"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/compare_time" />

        <TextView
            android:id="@+id/compare_result"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/verify_button"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="对比结果："
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/verify_button"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/compare_result"
            android:background=" @drawable/rect "
            android:gravity="center"
            android:text="点击对比..."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/postionView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/Gps_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/enquiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="#668BC34A"
            android:text="查询状态"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ch_gps_view_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background=" @drawable/check_gps_sq " />

        <TextView
            android:id="@+id/ch_gps_view_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background=" @drawable/check_gps_sq " />

        <TextView
            android:id="@+id/ch_gps_view_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background=" @drawable/check_gps_sq " />

        <TextView
            android:id="@+id/ch_gps_view_4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background=" @drawable/check_gps_sq " />

        <TextView
            android:id="@+id/ch_gps_view_5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background=" @drawable/check_gps_sq " />

        <TextView
            android:id="@+id/ch_gps_view_6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background=" @drawable/check_gps_sq " />

        <TextView
            android:id="@+id/ch_gps_view_7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background=" @drawable/check_gps_sq " />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="20dp"

        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ch_gps_view_8"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background=" @drawable/check_gps_sq " />

        <TextView
            android:id="@+id/ch_gps_view_9"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background=" @drawable/check_gps_sq " />

        <TextView
            android:id="@+id/ch_gps_view_10"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background=" @drawable/check_gps_sq " />

        <TextView
            android:id="@+id/ch_gps_view_11"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background=" @drawable/check_gps_sq " />

        <TextView
            android:id="@+id/ch_gps_view_12"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background=" @drawable/check_gps_sq " />

        <TextView
            android:id="@+id/ch_gps_view_13"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background=" @drawable/check_gps_sq " />

        <TextView
            android:id="@+id/ch_gps_view_14"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:layout_marginLeft="15dp"
            android:background=" @drawable/check_gps_sq " />
    </LinearLayout>

    <Button
        android:id="@+id/Person_cen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="#66F1B394"
        android:text="个人中心"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

</RelativeLayout>